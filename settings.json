    // removing title bar
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    "apc.menubar.compact": false,
    "window.commandCenter": false,

    // cursor and lines
    "editor.cursorBlinking": "solid",
    "editor.glyphMargin": false, // debugging, makes ur lines appear further from the border
    "editor.folding": false,
    "editor.lineHeight": 1.2, // 1.6, 1.4 1.2 (latest one)
    
    
    // activity bar
    "apc.electron": {
    "frame": false,
    "titleBarStyle": "hidden",
    },
    "apc.header": {
        "height": 37
    },
    "apc.sidebar.titlebar": {
        "height": 37
    },
    "apc.activityBar": {
        "size": 40,
        "itemSize": 40,
        "itemMargin": 0
    },
    "apc.stylesheet": {
    ".title-label": "display: none !important",
    ".composite.title": "display: block !important",
    ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important"
   },
    "files.autoSave": "afterDelay",
    "window.zoomLevel": 1,
    "code-runner.runInTerminal": true,
    "git.suggestSmartCommit": false,
    "python.defaultInterpreterPath": "C:\\Python312\\python.exe",
    "editor.fontFamily": "SF Mono, 'Courier New', monospace", // SF Mono Regular, Cascadia Code, Fira Code Regular, SF Mono(latest)
    "editor.fontWeight": "bold",
    "editor.fontSize": 16, // 14
    "editor.fontLigatures": false,
    "editor.linkedEditing": true,
    "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Regular",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBorder": "#8c8c8caa",
    },


    //STYLES
        "tabnine.experimentalAutoImports": true,
        "go.toolsManagement.autoUpdate": true,
        "workbench.iconTheme": "eq-material-theme-icons-darker",
        "terminal.integrated.mouseWheelZoom": true,
        "explorer.confirmDelete": false,
        "window.menuBarVisibility": "toggle",
        "editor.minimap.enabled": false,
        "workbench.settings.applyToAllProfiles": [
            "workbench.colorCustomizations"
        ],
        "update.mode": "manual",
        "terminal.integrated.minimumContrastRatio": 4.5,
        "workbench.colorTheme": "clari-codes-theme",
        "terminal.integrated.defaultProfile.windows": "Command Prompt", // to be able to read the terminal
        "editor.defaultFormatter": "ms-python.vscode-pylance",
        "python.languageServer": "Pylance",
        "workbench.activityBar.location": "hidden",
